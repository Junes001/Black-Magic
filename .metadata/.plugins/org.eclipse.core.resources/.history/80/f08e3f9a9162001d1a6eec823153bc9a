package week5;
import java.util.Scanner;

public class Point {
	public double x;
	public double y;
	public double space;
	 public Point(){
	        x = 0;
	        y = 0;
	    }
	public Point (double x,double y) {
		this.x=x;
		this.y=y;

		}
    public void getPoint(Scanner sc) {
        System.out.print("\tNhap hoanh do: ");
        x = sc.nextDouble();
        System.out.print("\tNhap tung do: ");
        y = sc.nextDouble();}
	public double getX() {
		return x;
	}
	public double getY() {
		return y;
	}
	public double getSpace() {
		return Math.sqrt((x*x+y*y));
	}
	public void out() {
		System.out.println("Hoanh do la: "+x+"Tung do la"+y);
	}
	public Point add (Point p1,Point p2) {
		double a=p1.x+p2.x;
		double b=p1.y+p2.y;
		return new Point(a,b);
	}
    public Point Tung(Point p1){
    	p1.x = -x;
    	p1.y = y;
        return new Point(p1.x, p1.y);
    }
    public Point Hoanh(Point p1){
    	p1.x = x;
    	p1.y = -y;
        return new Point(p1.x, p1.y);
    }
    public Point Goc(Point p1){
    	p1.x = -x;
        p1.y = -y;
        return new Point(p1.x, p1.y);}
	}

