package week5;
import java.util.Scanner;

public class Point {
	public double x[];
	public double n;
	public double space;
	private Object[] a;
	 public Point(){
	   for (int i=0;i<n;i++) {
		   x[i]=0;
	   }
	    }
	public Point (double a[]) {
		for (int i=0;i<n;i++) {
			this.a[i]=a[i];
		}

		}
    public void getPoint(Scanner sc) {
        System.out.print("\tNhap so chieu: ");
        n = sc.nextDouble();
        for (int i=0;i<n;i++) {
        	System.out.print("\tNhap tung do: ");
        	a[i] = sc.nextDouble();}}
	public double getSpace() {
		return Math.sqrt((x*x+y*y));
	}
	public void out() {
		System.out.println("Hoanh do la: "+x+"Tung do la"+y);
	}
	//Ngo Ngoc Vuong 20206221
	public Point add (Point p1,Point p2) {
		double a=p1.x+p2.x;
		double b=p1.y+p2.y;
		return new Point(a,b);
	}
    public Point Tung(Point p1){
    	p1.x = -x;
    	p1.y = y;
        return new Point(p1.x, p1.y);
    }
    public Point Hoanh(Point p1){
    	p1.x = x;
    	p1.y = -y;
        return new Point(p1.x, p1.y);
    }
    public Point Goc(Point p1){
    	p1.x = -x;
        p1.y = -y;
        return new Point(p1.x, p1.y);}
	}

